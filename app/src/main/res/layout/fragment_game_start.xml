<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FrG.GameStart"
    android:background="@drawable/backgraund">

    <Button
        android:id="@+id/buttonStartGame"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:backgroundTint="#75FAFAFA"
        android:fontFamily="@font/eater"
        android:text="PLAY"
        android:textColor="#C57B3A"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#D8BA1B" />

    <Button
        android:id="@+id/buttonStartRules"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="200dp"
        android:fontFamily="@font/eater"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="RULES"
        android:textSize="24dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonStartGame"
        android:backgroundTint="#75FFFFFF"
        android:textColor="#C57B3A"
        app:strokeColor="#D8BA1B"/>

    <Button
        android:id="@+id/buttonStartSetting"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/eater"
        android:textStyle="bold"
        android:text="SETTING"
        android:textSize="24dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonStartRules"
        android:backgroundTint="#75FAFAFA"
        android:textColor="#C57B3A"
        app:strokeColor="#D8BA1B" />

    <Button
        android:id="@+id/buttonStartEXIT"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/eater"
        android:textStyle="bold"
        android:text="EXIT"
        android:textSize="24dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonStartSetting"
        android:backgroundTint="#75FAFAFA"
        android:textColor="#C57B3A"
        app:strokeColor="#D8BA1B"/>

</androidx.constraintlayout.widget.ConstraintLayout>